<Application x:Class="weather_app.App"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:local="clr-namespace:weather_app"
             xmlns:viewModel="clr-namespace:weather_app.ViewModel"
             xmlns:views="clr-namespace:weather_app.Views"
             StartupUri="MainWindow.xaml">  
    <Application.Resources>  
        <ResourceDictionary>  
            
            <ResourceDictionary.MergedDictionaries>  
                <ResourceDictionary Source="/Theme/MenuThemes.xaml"/>  
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>
        </ResourceDictionary>  
    </Application.Resources>  
</Application>
