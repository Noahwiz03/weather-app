<UserControl x:Class="weather_app.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:weather_app.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Weather Info"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   FontSize="20"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal">
            <Border Width="400"
                    Height="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightSkyBlue" Offset="0.0"/>
                        <GradientStop Color="LightBlue" Offset="0.6"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Wind"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   FontSize="24"
                                   Margin="5"/>
                        <TextBlock 
                                   HorizontalAlignment="Left"
                                   Margin="5"
                                   FontSize="20"
                                   Foreground="White">
                              <Run Text="Wind Speed: "/>
                             <Run Text="{Binding WeatherData.Wind.Speed}"/>
                             <Run Text=" mph"/>
                            
                        </TextBlock>
                        <TextBlock  HorizontalAlignment="Left"
                                   FontSize="20"
                                   Margin="5"
                                   Foreground="White">
                            <Run Text="Wind Gust: "/>
                            <Run Text="{Binding WeatherData.Wind.Gust}"/>
                            <Run Text=" mph"/>

                        </TextBlock>
                        <TextBlock 
                                   HorizontalAlignment="Left"
                                   FontSize="20"
                                   Margin="5"
                                   Foreground="White">
                            <Run Text="Wind Direction: "/>
                            <Run Text="{Binding WeatherData.Wind.Deg}"/>
                            <Run Text="°"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Width="200"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightSkyBlue" Offset="0.0"/>
                        <GradientStop Color="LightBlue" Offset="0.6"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="Humidity"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="24"/>

                    <TextBlock Foreground="White"
                               FontSize="60"
                               Margin="0,35,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <Run Text="{Binding WeatherData.Main.Humidity}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel >
            <StackPanel Orientation="Horizontal">
                <Border Width="300"
                        Height="180"
                        Margin="0,20,0,0"
                        CornerRadius="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#ffcc83" Offset="0.0"/>
                            <GradientStop Color="#b97745" Offset="0.6"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Sunrise -->
                            <RowDefinition Height="*"/>
                            <!-- Graph -->
                            <RowDefinition Height="Auto"/>
                            <!-- Sunset -->
                        </Grid.RowDefinitions>

                        <!-- Sunrise -->
                        <TextBlock Grid.Row="0" 
                               Text="{Binding FormattedSunrise}"
                               HorizontalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"/>

                        <!-- Graph -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center">

                            <TextBlock Text="Day Progress"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,5" 
                                       Foreground="White"/>

                            <ProgressBar Minimum="0" Maximum="100" 
                                         Value="{Binding DayProgressPercentage, Mode=OneWay}" 
                                         Height="30" 
                                         Foreground="#4b4860"
                                         Background="#272537"/>
                        </StackPanel>

                        <!-- Sunset -->
                        <TextBlock Grid.Row="2" 
                                   Text="{Binding FormattedSunset}"
                                   HorizontalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,10,0,0"/>
                    </Grid>

                </Border>

                <Border Width="180"
                        Height="180"
                        Margin="35,20,0,0"
                        CornerRadius="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#97a0e8" Offset="0.0"/>
                            <GradientStop Color="#cdcff2" Offset="0.6"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Visibility"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontSize="24"/>
                        <TextBlock Grid.Row="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontSize="45">
                            <Run Text="{Binding Visbility, Mode=OneWay}"/>
                            <Run Text="mi"/>
                        </TextBlock>
                    </Grid>

                </Border>

            </StackPanel>
            
        </StackPanel>
        
    </StackPanel>
    
</UserControl>
